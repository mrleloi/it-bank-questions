# Test Environment Configuration

# ========================================
# ENVIRONMENT
# ========================================
DEBUG=False
ENVIRONMENT=test
SECRET_KEY=test-secret-key-for-testing-only

# ========================================
# DATABASE
# ========================================
# Use SQLite for tests
DATABASE_URL=sqlite:///test_db.sqlite3
DB_ENGINE=django.db.backends.sqlite3
DB_NAME=test_db.sqlite3

# ========================================
# REDIS
# ========================================
